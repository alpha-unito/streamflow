{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://streamflow.di.unito.it/schemas/recovery/default_checkpoint_manager.json",
  "type": "object",
  "properties": {
    "checkpoint_dir": {
      "type": "string",
      "description": "Directory where checkpoint data must be placed",
      "default": "$TMPDIR/streamflow/checkpoint/$RANDOM_NAME"
    },
    "deployment": {
      "type": "string",
      "description": "Name of deployment in which to save checkpoint data. Default: local"
    },
    "service": {
      "type": "string"
    }
  },
  "additionalProperties": false
}