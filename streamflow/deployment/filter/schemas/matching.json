{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://streamflow.di.unito.it/schemas/deployment/filter/matching.json",
  "type": "object",
  "properties": {
    "targets": {
      "type": "array",
      "title": "Deployments",
      "description": "A list of deployments and their conditions. A deployment will be discarded unless its condition is satisfied.",
      "items": {
        "type": "object",
        "properties": {
          "target": {
            "title": "Deployment",
            "description": "The name of the deployment.",
            "oneOf": [
              {
                "type": "string",
                "title": "Deployment"
              },
              {
                "type": "object",
                "title": "Deployment and service",
                "properties": {
                  "deployment": {
                    "type": "string",
                    "title": "Deployment"
                  },
                  "service": {
                    "type": "string",
                    "title": "Service"
                  }
                },
                "required": [
                  "deployment"
                ]
              }
            ]
          },
          "job": {
            "type": "array",
            "title": "Job inputs",
            "description": "A list of ports and regular expressions that must match the port values.",
            "items": {
              "type": "object",
              "properties": {
                "port": {
                  "type": "string",
                  "description": "The input port of the binding step."
                },
                "regex": {
                  "type": "string",
                  "description": "The regular expression that the input must match."
                }
              },
              "required": [
                "port",
                "regex"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "target",
          "job"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "targets"
  ],
  "additionalProperties": false
}